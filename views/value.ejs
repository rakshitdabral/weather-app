    <title>Weather App</title>
</head>
<body>
    <div class="container glass">
        <div class="search">
            <form method="post" action="/">
                <input type="text" class="search-bar" placeholder="Location" name="cityName">
                <button type="submit" class="btn "><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>
        <div class="weather loading">
            <h2 class="city">Weather in <%= cityName%></h2>
            <h1 class="temp"><%= specificTemp%> Â°C</h1>
            <div class="flex">
               <img src="https://openweathermap.org/img/wn/<%=weatherIcon%>@2x.png">
              <div class="description"><%=desc%></div>
            </div>
            <div class="humidity">Humidity: <%= specificHumidity%>%</div>
            <div class="wind">Wind speed: <%=specificSpeed%> km/h</div>
          </div>
    </div>

    
</body>
</html>